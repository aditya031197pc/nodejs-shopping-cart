<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>
   
   <main>
        <%- include('../includes/error-message.ejs', {data: {errors : errors, errorMessage: errorMessage}}) %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input class="<%= errors.find(e => e.param === 'email')? 'invalid' : '' %>"
                 type="text" name="email" id="email" value="<%= oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= errors.find(e => e.param === 'password')? 'invalid' : '' %>"
                 type="password" name="password" id="password" value="<%= oldInput.password%>">
            </div>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/password-reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>